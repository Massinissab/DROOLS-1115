<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-Cucumber</actionName>
            <displayName>Cucumber</displayName>
            <goals>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>RunCucumberIT</test>
            </properties>
            <activatedProfiles>
                <activatedProfile>integration-tests</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dcom.sun.xml.ws.transport.http.client.HttpTransportPipe.dump=true -Djava.rmi.server.hostname=mbou-vm -Dcom.sun.management.jmxremote.port=3083 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Xmx1500m -XX:MaxPermSize=256m -classpath %classpath com.darty.pricing.PricingApplication server configs/mas1bou.yaml</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dcom.sun.xml.ws.transport.http.client.HttpTransportPipe.dump=true -Djava.rmi.server.hostname=mbou-vm -Dcom.sun.management.jmxremote.port=3083 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Xmx1500m -XX:MaxPermSize=256m -classpath %classpath com.darty.pricing.PricingApplication server configs/mas1bou.yaml</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dcom.sun.xml.ws.transport.http.client.HttpTransportPipe.dump=true -Djava.rmi.server.hostname=mbou-vm -Dcom.sun.management.jmxremote.port=3083 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false -Xmx1500m -XX:MaxPermSize=256m -classpath %classpath com.darty.pricing.PricingApplication server configs/mas1bou.yaml</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
